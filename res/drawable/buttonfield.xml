<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#000000" />
        </shape>
    </item>
    <item android:top="3dp" android:right="2dp" android:bottom="3dp"
          android:left="3dp">
        <shape android:shape="rectangle">
            <gradient
                    android:startColor="#F0C43423"
                    android:centerColor="#AB1B09"
                    android:endColor="#F0C43423"
                    android:angle="90" />
        </shape>

    </item>
</layer-list>